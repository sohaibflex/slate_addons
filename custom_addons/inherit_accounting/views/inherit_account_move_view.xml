<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_account_view_move_form" model="ir.ui.view">
        <field name="name">inherit.account.view_move_form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='narration']" position="after">
                <field name="bank_details" placeholder="Bank Details" class="oe_inline" nolabel="1"/>
            </xpath>
        </field>
    </record>
</odoo>